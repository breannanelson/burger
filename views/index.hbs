<div class="jumbotron">
  <h1 class="display-3 text-center">Eat-Da-Burger!</h1>
  <p class="lead text-center">Add your fav burgers and then devour then</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div id="unEatenB">
        <h4>unEaten Burgers:</h4>
        {{#each burger}} 
          {{#unless devoured}} 
            {{burger_name}}
            <button class="devourBTN float-right" value={{id}}>Devour!</button>
            <br> 
          {{/unless}} 
        {{/each}}
      </div>

    </div>
    <div class="col-md-6">
      <div id="EatenB">
        <h4>Eaten Burgers:</h4>
        {{#each burger}} {{#if devoured}} {{burger_name}}
        <br> {{/if}} {{/each}}
      </div>

    </div>
  </div>
  <div class="row">
    <form>
      <input type="text" id="burger-input">
      <button id="submitBTN">Submit</button>
    </form>
  </div>
</div>